{% extends 'SiteMainBundle:Frontend:layout.html.twig' %}

{% block title %}{{ page.metaTitle }}{% endblock %}
{% block meta_description %}{{ page.metaDescription }}{% endblock %}
{% block meta_keywords %}{{ page.metaKeywords }}{% endblock %}
{% block og_title %}{{ page.metaTitle }}{% endblock %}
{% block og_description %}{{ page.metaDescription }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/sitemain/frontend/scripts/photoswipe/photoswipe.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/sitemain/frontend/scripts/perfect-scrollbar/css/perfect-scrollbar.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/sitemain/frontend/styles/children.css') }}">
{% endblock %}

{% block top %}
    <div class="wrap-video">
        <div class="video" id="video"></div>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="content_portfolio">
            <div class="wrap_block_portfolio">
                <div class="inner_block_portfolio">
                    <div class="block-portfolio">
                        <div class="grid">
                            {% for p in portfolio %}<div class="wrap-box">
                                <div class="box">
                                    <div class="gallery">
                                        <a href="{{ asset(p.webPath) }}" rel="group{{ p.id }}">
                                            <img src="{{ image(p.webPath).zoomCrop(347, 213) }}" alt=""/>
                                        </a>
                                        {% for i in p.images %}
                                            <a href="{{ asset(i.img) }}" class="hide" rel="group{{ p.id }}"></a>
                                        {% endfor %}
                                    </div>
                                    <a href="#" class="name">{{ p.title }}</a>
                                </div>
                                </div>{% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/sitemain/frontend/scripts/photoswipe/lib/simple-inheritance.min.js') }}"></script>
    <script src="{{ asset('bundles/sitemain/frontend/scripts/photoswipe/code-photoswipe-1.0.11.min.js') }}"></script>
{% endblock %}