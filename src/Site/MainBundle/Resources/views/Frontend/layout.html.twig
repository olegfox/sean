{% extends "::base.html.twig" %}

{% block stylesheets %}
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <!-- build:css(.) styles/vendor.css -->
    <!-- bower:css -->
    <link rel="stylesheet" href="{{ asset('bundles/sitemain/frontend/bower_components/bootstrap/dist/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/sitemain/frontend/bower_components/magnific-popup/dist/magnific-popup.css') }}">
    <!-- endbower -->
    <!-- endbuild -->
    <!-- build:css(.tmp) styles/main.css -->
    <link rel="stylesheet" href="{{ asset('bundles/sitemain/frontend/styles/main.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/sitemain/frontend/styles/children.css') }}">
    <!-- endbuild -->
    <script src="{{ asset('bundles/sitemain/frontend/scripts/SidebarTransitions/modernizr.custom.js') }}"></script>
    <!-- build:js scripts/vendor/modernizr.js -->
    <script src="{{ asset('bundles/sitemain/frontend/bower_components/modernizr/modernizr.js') }}"></script>
    <!-- endbuild -->
{% endblock %}

{% block body %}
    <div id="st-container" class="st-container">
        <div class="st-pusher">
            <nav class="st-menu st-menu-menu st-effect-1" id="st-menu-menu">
                <h2>Пресс служба</h2>

                <div class="block">
                    <form id="form-feedback" action="{{ path('frontend_feedback') }}" method="post">
                        {{ form_widget(form.name, {'attr': {'class' : 'form-control2'} }) }}
                        {{ form_widget(form.phone) }}
                        {{ form_widget(form.email) }}
                        {{ form_widget(form.theme) }}
                        {{ form_widget(form.message) }}
                        <button type="submit">Отправить</button>
                        {{ form_rest(form) }}
                    </form>
                </div>

                <div class="block">
                    <h2>Контактный телефон</h2>
                    <p>+7 (495) 754-65-89</p>
                </div>

                <div class="block">
                    <h2>Электронная почта</h2>
                    <p>mail@sablin.ru</p>
                </div>

            </nav>
            <nav class="st-menu st-menu-news st-effect-1" id="st-menu-news">
            </nav>
            <div class="header black">
                {{ knp_menu_render('SiteMainBundle:FrontendMenuBuilder:mainMenu') }}
            </div>
            <div class="wrap-st-content">
                {% block content %}
                {% endblock %}
            </div>
            <div class="footer black">
                <p>© 2015 Дмитрий Саблин. Все права защищены.</p>
            </div>
        </div>
    </div>
{% endblock %}

